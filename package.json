{
  "name": "supertype",
  "version": "1.1.0",
  "description": "Exports typestyles as SASS, Helpers, and a type sample page for Patternlab",
  "author": "Supercool (based on Typex)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sallysupercool/supertype"
  },
  "engines": {
    "sketch": ">=3.0"
  },
  "skpm": {
    "name": "Super Type",
    "author": "Supercool",
    "manifest": "src/manifest.json",
    "main": "supertype.sketchplugin",
    "assets": [
      "assets/**/*"
    ]
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.5.2"
  }
}
